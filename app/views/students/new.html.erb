<div class="wrapper-12 panel-wrapper">
  <h1><%= t("users.new_student") %></h1>

  <%= simple_form_for @student do |f| %>

    <%= render 'shared/object_errors', object: @student %>
    <%= render 'registration_fields', student: @student, form: f %>


    <div class="panel panel-default">
      <ul class="list-group">
        <li class="list-group-item" style="text-align: right">
          <%= check_box_tag "AGB", 'accepted', id:"agb" %> Hiermit best√§tige ich, dass ich die AGB gelesen und akzeptiert habe
        </li>
      </ul>
    </div>

    <%= f.submit t("links.register"), class: "btn btn-primary pull-right" %>
  <% end %>
</div>